{
	"version": "2.0.1",
	"tasks": {
		"build": "deno run -A scripts/build.ts",
		"release": "deno run -A scripts/release.ts"
	},
	"lint": {
		"rules": {
			"exclude": [
				"no-var",
				"prefer-const",
				"no-cond-assign",
				"no-inner-declarations"
			]
		}
	},
	"fmt": {
		"lineWidth": 100,
		"singleQuote": true,
		"useTabs": true
	},
	"exclude": [
		"coverage",
		"readme.md",
		"npm"
	]
}
